{
  "name": "the-good-place-ai",
  "version": "1.0.0",
  "description": "AI simulator for The Good Place characters using Claude Agent SDK",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "the-good-place": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "compile": "bun build src/index.ts --compile --outfile the-good-place",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "dev:web": "bun run web/server.ts",
    "build:web": "bun build web/server.ts --target=bun --outdir=dist/web",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "claude",
    "the-good-place",
    "simulator",
    "agents"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "gray-matter": "^4.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "bun-plugin-tailwind": "^0.1.2",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  }
}
